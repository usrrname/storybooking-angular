{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "emitDecoratorMetadata": true,
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "**/*.stories.ts",
    "src/jest-config",
    "**/*.stories.*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
